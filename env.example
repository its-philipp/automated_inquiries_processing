# Application
APP_NAME=inquiry-automation-pipeline
APP_ENV=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=inquiry_automation
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/inquiry_automation

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlartifacts
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db

# Airflow
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./airflow/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://postgres:postgres@localhost:5432/airflow
AIRFLOW__CELERY__BROKER_URL=redis://localhost:6379/0
AIRFLOW__CELERY__RESULT_BACKEND=db+postgresql://postgres:postgres@localhost:5432/airflow

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Streamlit
STREAMLIT_PORT=8501

# AWS (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=inquiry-automation-data
ECR_REPOSITORY=inquiry-automation

# Model Configuration
DEFAULT_CLASSIFIER_MODEL=distilbert-base-uncased
DEFAULT_SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
MODEL_CACHE_DIR=./models

# Application Settings
MAX_INQUIRY_LENGTH=5000
BATCH_SIZE=32
CONFIDENCE_THRESHOLD=0.7

