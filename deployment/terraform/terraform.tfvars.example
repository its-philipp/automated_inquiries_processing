# terraform.tfvars.example
# Copy this file to terraform.tfvars and customize the values

# Project Configuration
project_name = "inquiry-automation"
environment  = "dev"
namespace    = "inquiries-system"

# Kubernetes Cluster Configuration
# For local clusters (minikube, kind, k3s), leave these empty to use kubeconfig
cluster_endpoint = "https://kubernetes.default.svc"
cluster_ca_certificate = ""
cluster_token = ""

# For remote clusters, uncomment and configure:
# cluster_endpoint = "https://your-cluster-endpoint:6443"
# cluster_ca_certificate = "LS0tLS1CRUdJTi..." # Base64 encoded CA cert
# cluster_token = "eyJhbGciOiJSUzI1NiIs..." # Service account token
