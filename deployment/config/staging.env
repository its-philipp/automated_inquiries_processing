# Staging Environment Configuration

# Application
APP_NAME=inquiry-automation-pipeline
APP_ENV=staging
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=inquiry_automation
POSTGRES_HOST=${RDS_ENDPOINT}
POSTGRES_PORT=5432

# Redis
REDIS_HOST=${REDIS_ENDPOINT}
REDIS_PORT=6379
REDIS_DB=0

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_ARTIFACT_ROOT=s3://${S3_BUCKET}/mlflow-artifacts
MLFLOW_BACKEND_STORE_URI=${DATABASE_URL}

# AWS Configuration
AWS_REGION=${AWS_REGION}
S3_BUCKET_NAME=${S3_BUCKET}

# Model Configuration
DEFAULT_CLASSIFIER_MODEL=distilbert-base-uncased
DEFAULT_SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
MODEL_CACHE_DIR=/app/models

# Application Settings
MAX_INQUIRY_LENGTH=5000
BATCH_SIZE=16
CONFIDENCE_THRESHOLD=0.6

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp
LOG_LEVEL=DEBUG
